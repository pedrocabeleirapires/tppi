<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>Accu Weather</name>
    <author>Bilal Kabeer Butt</author>
    <creationDate>02-24-2015</creationDate>
    <copyright>Copyright (c) GegaByte Corporation. All Rights reserved.</copyright>
    <license>GPL V2</license>
    <authorEmail>bilalbutt@gmail.com</authorEmail>
    <authorUrl>http://www.gegabyte.org</authorUrl>
    <version>1.1</version>
    <description>

		&lt;div style="text-align:left;"&gt;
			&lt;h1 style="text-align: center;" &gt; Accu Weather Module &lt;/h1&gt;
			&lt;p&gt; Shows weather from http://www.accuweather.com/ &lt;/p&gt;
		&lt;/div&gt;
		&lt;div style="text-align: center;" &gt;
			&lt;img src="http://www.gegabyte.org/subdomains/sig/made-in-pakistan.jpg" width="320" /&gt;
		&lt;/div&gt;
	
	</description>
    <!-- Listing of all files that should be installed for the module to function -->
    <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
        <filename module="mod_accu_weather">mod_accu_weather.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
		
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field class="btn-group btn-group-yesno"  name="temp_scale" type="radio" default="C" label="Select an option" description="">
					<option value="C">C</option>
					<option value="F">F</option>
				</field>
				
				<field class="btn-group btn-group-yesno" name="widget_size" type="radio" default="a" label="Show Title" description="Show Title of article">
					<option value="s">Small</option>
					<option value="m">Medium</option>
					<option value="l">Large</option>
					<option value="a">Auto</option>
				</field>
			

			</fieldset>
		</fields>
	</config>
</extension>